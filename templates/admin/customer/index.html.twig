{% extends 'admin/base.html.twig' %}

{% block title %}Hello AdminDashboardController!{% endblock %}

{% block body %}
      <h2>Clients</h2>
      <div class="table-responsive">
        <table class="table table-striped table-sm">
         <thead>
            <tr>
              <th>ID</th>
              <th>Email</th>
              <th>Nom</th>
              <th>Pr√©nom</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
          {% for user in pagination.data %}
            <tr>
              <td>{{user.id}}</td>
              <td>{{user.email}}</td>
              <td>{{user.lastname}}</td>
              <td>{{user.firstname}}</td>
              <td>
                <a class="btn btn-primary" href="{{path('admin_customer_edit',{'id':user.id})}}"><i class="fas fa-edit"></i></a>
                <a class="btn btn-danger" href="{{path('admin_customer_delete',{'id':user.id})}}"><i class="fas fa-trash"></i></a>
              </td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
         {{pagination.render()}}
      </div>
{% endblock %}
